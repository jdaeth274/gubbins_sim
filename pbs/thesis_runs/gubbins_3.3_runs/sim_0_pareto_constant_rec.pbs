for REP in {1..10}
do
cd "rep_${REP}_data"
## Get the simulation done
bash ~/gubbins_testing/gubbins_sim/bash/simul_script_poisson_JC_PARETO_LENGTH.sh $RECCERS 1 0 \
~/gubbins_testing/simul_data/strep_53_uc.aln \
~/gubbins_testing/simul_data/26_phage.mfa 
## Make the IQtree
SIM_PREFIX="sim-branch-${RECCERS}-rec-0.1"
cd $SIM_PREFIX
IQ_PREFIX="raw-raw-raw-rep-${REP}-${SIM_PREFIX}-JC-JC"
ORIG_PREFIX="orig-orig-orig-rep-${REP}-${SIM_PREFIX}-JC-JC.tre"
iqtree -v -s *.aln -T 4 -m JC --prefix $IQ_PREFIX
rm *ckp.gz *.iqtree *.bionj *.mldist
cp *.tree $ORIG_PREFIX
cp *.treefile "${IQ_PREFIX}.tre"
cd ../../

done

